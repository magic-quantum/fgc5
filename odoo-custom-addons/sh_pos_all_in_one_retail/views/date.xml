<?xml version="1.0" encoding="UTF-8"?>
<odoo>
                <!-- Form Views -->
    <record id="view_pos_order_form" model="ir.ui.view">
        <field name="name">pos.order.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
                    <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[@name='order_fields']" position="inside">
                <field name="date_order_local"/>

            </xpath>
        </field>
    </record>
                <!-- Tree Views -->
    <record id="view_pos_order_tree" model="ir.ui.view">
        <field name="name">pos.order.tree</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
        <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="before">
                <field name="date_order_local"/>

            </xpath>
        </field>
    </record>

                <!-- Action -->
    <record id="view_pos_order_search_inherit" model="ir.ui.view">
        <field name="name">pos.order.search.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='posted']" position="inside">
                <separator/>
                    <!-- Filters for Delivery Status -->
                <filter string="Not Sent" name="x_delivery_status_notsent" domain="[('x_delivery_status', '=', 'notsend')]" />
                <!-- <filter string="On Way" name="x_delivery_status_onway" domain="[('x_delivery_status', '=', 'onway')]" />
                <filter string="Delivered" name="x_delivery_status_delivered" domain="[('x_delivery_status', '=', 'delivered')]" /> -->

            </xpath>
                    <!-- Group By -->
            <xpath expr="//group" position="inside">
                <filter string="Delivery Person" name="group_by_delivery_person" domain="[]" context="{'group_by': 'x_delivery_person_name'}"/>
                <filter string="Delivery Status" name="group_by_delivery_status" domain="[]" context="{'group_by': 'x_delivery_status'}"/>

            </xpath>
        </field>
    </record>
</odoo>
