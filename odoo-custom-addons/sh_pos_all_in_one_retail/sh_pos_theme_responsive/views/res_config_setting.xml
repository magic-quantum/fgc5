<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_pos_theme_config" model="ir.ui.view">
        <field name="name">sh.pos.theme.setting.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pos_interface_section']" position="after">
                <h2>POS Theme</h2>
                <div class="row mt16 o_settings_container" id="sh_pos_theme">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_pos_night_mode"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_pos_night_mode"/>
                            <div class="text-muted">
                                
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_enable_info_control_button"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_enable_info_control_button"/>
                            <div class="text-muted">
                                
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_enable_orderhistory_control_button"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_enable_orderhistory_control_button"/>
                            <div class="text-muted">
                                
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_enable_refund_control_button"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_enable_refund_control_button"/>
                            <div class="text-muted">
                                
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_enable_UOM_control_button"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_enable_UOM_control_button"/>
                            <div class="text-muted">
                                
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_enable_bill_control_button"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_enable_bill_control_button"/>
                            <div class="text-muted">
                                
                            </div>
                        </div>
                    </div>


                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_enable_guest_control_button"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_enable_guest_control_button"/>
                            <div class="text-muted">
                                
                            </div>
                        </div>
                    </div>


                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_enable_print_order_button"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_enable_print_order_button"/>
                            <div class="text-muted">
                                
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_enable_split_bill_button"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_enable_split_bill_button"/>
                            <div class="text-muted">
                                
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_enable_transfer_order_button"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_enable_transfer_order_button"/>
                            <div class="text-muted">
                                
                            </div>
                        </div>
                    </div>


                </div>
            </xpath>
        </field>
    </record>
</odoo>